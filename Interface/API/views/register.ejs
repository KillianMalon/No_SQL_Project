<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mt-5 mb-3">S'inscrire</h1>
            <form id="login-form" method="post" action="register">
                <div class="form-group">
                    <label for="email-input">Adresse email</label>
                    <input type="email" class="form-control" name="email" id="email" required>
                </div>
                <div class="form-group">
                    <label for="password-input">Mot de passe</label>
                    <input type="password" class="form-control" name="password" id="password" required>
                </div>
                <button type="submit"  class="btn btn-primary btn-block mt-4">S'inscrire</button>
            </form>
            <p class="text-center mt-3">Vous avez déja un compte ? <a href="login">Connectez-vous</a></p>
        </div>
    </div>
</div>

